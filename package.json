{
  "name": "snowpack-doodle",
  "version": "1.0.0",
  "description": "Sample project with: Preact, JSX, Fragment, Router, CSS Grid, Typescript, Babel",
  "main": "index.js",
  "dependencies": {
    "preact": "^10.3.2",
    "wouter": "^2.4.0"
  },
  "snowpack": {
    "webDependencies": [
      "preact/compat",
      "wouter/preact"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@babel/preset-typescript": "^7.8.3",
    "babel-plugin-minify-builtins": "^0.5.0",
    "babel-plugin-minify-constant-folding": "^0.5.0",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-plugin-minify-mangle-names": "^0.5.0",
    "babel-plugin-minify-type-constructors": "^0.4.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-inline-consecutive-adds": "^0.4.3",
    "babel-plugin-transform-merge-sibling-variables": "^6.9.4",
    "babel-plugin-transform-minify-booleans": "^6.9.4",
    "babel-plugin-transform-regexp-constructors": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-plugin-transform-remove-debugger": "^6.9.4",
    "babel-plugin-transform-remove-undefined": "^0.5.0",
    "babel-preset-minify": "^0.5.1",
    "cpx-fixed": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "servor": "^3.2.0",
    "snowpack": "^1.3.1",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "clean:prod": "node shell/remove.js \"./prod\"",
    "clean:dev": "node shell/remove.js \"./dist\"",
    "build:dev": "npm run build:js:dev && npm run build:esm:dev && npm run copy:static",
    "build:js:dev": "babel --extensions \".ts,.tsx,.js,.jsx\" src/ -d dist",
    "build:js:prod": "BABEL_ENV=production babel --extensions \".ts,.tsx\" src/ -d dist",
    "build:js:watch": "babel --extensions \".ts,.tsx,.js,.jsx\" src/ -d dist --watch",
    "build:esm:prod": "snowpack --optimize --no-source-map --include \"dist/**/*.js\" --dest dist/web_modules",
    "build:esm:dev": "snowpack --include \"dist/**/*.js\" --dest dist/web_modules",
    "copy:static": "cpx-fixed \"src/*.{html,css}\" ./dist",
    "copy:prod": "node shell/rename.js ./dist ./prod",
    "watch:dev": "npm run clean:dev && npm run build:dev && npm run build:js:watch",
    "server:dev": "lite-server",
    "start": "concurrently --kill-others \"npm run watch:dev\" \"npm run server:dev\"",
    "prod": "npm run clean:dev && npm run clean:prod && npm run build:js:prod && npm run build:esm:prod && npm run copy:static && npm run copy:prod"
  },
  "keywords": [
    "snowpack",
    "typescript",
    "preact",
    "router",
    "babel",
    "css grid",
    "JSX",
    "Fragment"
  ],
  "author": "crra",
  "license": "MIT"
}
