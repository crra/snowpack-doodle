{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",

    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "/web_modules/*.js": ["node_modules/*", "web_modules/*"]
    }
  }
}
